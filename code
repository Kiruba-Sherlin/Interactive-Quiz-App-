script.js

const quizData = {
  easy: [
    { question: "What is the capital of India?", a: "Delhi", b: "Mumbai", c: "Kolkata", correct: "a", reason: "Delhi is the capital of India since 1911." },
    { question: "Which planet is closest to the Sun?", a: "Venus", b: "Mercury", c: "Mars", correct: "b", reason: "Mercury is the closest planet to the Sun." },
    { question: "Which is the largest mammal?", a: "Elephant", b: "Blue Whale", c: "Giraffe", correct: "b", reason: "Blue Whale is the largest mammal on Earth." },
    { question: "How many days are there in a leap year?", a: "365", b: "366", c: "367", correct: "b", reason: "Leap year has 366 days with Feb 29." },
    { question: "Which gas do humans need to survive?", a: "Oxygen", b: "Carbon Dioxide", c: "Nitrogen", correct: "a", reason: "Humans breathe oxygen to live." }
  ],
  medium: [
    { question: "Who wrote the Ramayana?", a: "Valmiki", b: "Tulsidas", c: "Veda Vyasa", correct: "a", reason: "Valmiki is the author of the Ramayana." },
    { question: "What is the chemical symbol for Gold?", a: "Au", b: "Ag", c: "Go", correct: "a", reason: "Gold’s symbol is Au from Latin word Aurum." },
    { question: "Which country hosted 2016 Olympics?", a: "China", b: "Brazil", c: "Japan", correct: "b", reason: "2016 Olympics were hosted in Rio de Janeiro, Brazil." },
    { question: "Which blood group is universal donor?", a: "O-", b: "AB+", c: "A+", correct: "a", reason: "O- blood group can donate to anyone." },
    { question: "Which is the smallest prime number?", a: "1", b: "2", c: "3", correct: "b", reason: "2 is the smallest and only even prime number." }
  ],
  hard: [
    { question: "What is the SI unit of force?", a: "Joule", b: "Newton", c: "Pascal", correct: "b", reason: "Newton (N) is the SI unit of force." },
    { question: "Who is known as the father of computer?", a: "Charles Babbage", b: "Alan Turing", c: "Bill Gates", correct: "a", reason: "Charles Babbage designed the first mechanical computer." },
    { question: "Which element has atomic number 1?", a: "Helium", b: "Oxygen", c: "Hydrogen", correct: "c", reason: "Hydrogen is atomic number 1 in the periodic table." },
    { question: "Who painted the Mona Lisa?", a: "Leonardo da Vinci", b: "Pablo Picasso", c: "Michelangelo", correct: "a", reason: "Mona Lisa was painted by Leonardo da Vinci." },
