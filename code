let currentLevel = "";
let currentQuiz = 0;
let score = 0;

const home = document.getElementById("home");
const quiz = document.getElementById("quiz");
const explanation = document.getElementById("explanation");

const questionEl = document.getElementById("question");
const opt1 = document.getElementById("opt1");
const opt2 = document.getElementById("opt2");
const opt3 = document.getElementById("opt3");
const explanationText = document.getElementById("explanation-text");
const reasonBtn = document.getElementById("reasonBtn");

function startQuiz(level) {
  currentLevel = level;
  currentQuiz = 0;
  score = 0;

  home.classList.add("hidden");
  quiz.classList.remove("hidden");

  setLevelColor();
  loadQuiz();
}

function setLevelColor() {
  if (currentLevel === "easy") quiz.style.background = "#004464";   // dark green
  if (currentLevel === "medium") quiz.style.background = "#ce7303"; // dark orange
  if (currentLevel === "hard") quiz.style.background = "#8b0000";   // dark red
}


function loadQuiz() {
  deselectOptions();
  const qData = quizData[currentLevel][currentQuiz];
  questionEl.innerText = qData.question;
  opt1.innerText = qData.a;
  opt2.innerText = qData.b;
  opt3.innerText = qData.c;
  reasonBtn.classList.add("hidden");
}

function deselectOptions() {
  [opt1, opt2, opt3].forEach(opt => {
    opt.style.background = "#ffffff"; // reset to white
    opt.style.color = "black";
    opt.style.pointerEvents = "auto"; // re-enable click
  });
}

function selectAnswer(ans) {
  const qData = quizData[currentLevel][currentQuiz];
  let correctAns = qData.correct;

  [opt1, opt2, opt3].forEach(opt => opt.style.pointerEvents = "none");

  // Highlight correct
  if (correctAns === "a") opt1.style.background = quiz.style.background;
  if (correctAns === "b") opt2.style.background = quiz.style.background;
  if (correctAns === "c") opt3.style.background = quiz.style.background;

  // Wrong → red
  if (ans !== correctAns) {
    if (ans === "a") opt1.style.background = "red";
    if (ans === "b") opt2.style.background = "red";
    if (ans === "c") opt3.style.background = "red";
  } else {
    score++;
  }

  reasonBtn.classList.remove("hidden");
}

function showReason() {
  const qData = quizData[currentLevel][currentQuiz];
  quiz.classList.add("hidden");
  explanation.classList.remove("hidden");
  explanationText.innerText = qData.reason;
}

function nextQuestion() {
  currentQuiz++;
  if (currentQuiz < quizData[currentLevel].length) {
    quiz.classList.remove("hidden");
    explanation.classList.add("hidden");
    setLevelColor();
    loadQuiz();
  } else {
    explanation.innerHTML = `<h2>You got ${score}/${quizData[currentLevel].length} correct!</h2>
    <button onclick="location.reload()">Restart</button>`;
  }
}
